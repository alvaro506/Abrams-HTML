#content
	
	.search
		padding-top 58px
		
		@media (min-width 1025px) 
			padding-left 24px
			
			
		input
			width 300px
			height 50px
			background-color #f1f1f1
			border none
			box-shadow none
			padding 15px 18px
			font-family 'Gotham Light'
			font-size 1.1em
			
			@media (min-width 641px) and (max-width 767px)
				font-size 0.9em
			@media (min-width 1025px)
				width 100%
		
		.letters 
			margin-top 15px 
			
			@media (min-width 1025px) 
				float right 
			
			a 
				text-transform uppercase
				color #000
				margin 0 2px
				
				@media (max-width 639px)
					margin 0
					
				// @media (min-width 641px) and (max-width 767px)
				// 	font-size 1em
					
				@media (min-width 768px) and (max-width 1023px)
					margin 0 1px
					font-size 0.95em
.authorsResults
	-webkit-column-count 2 /* Chrome, Safari, Opera */
	-moz-column-count 2 /* Firefox */
	column-count 2
	-webkit-column-gap 60px /* Chrome, Safari, Opera */
	-moz-column-gap 60px /* Firefox */
	column-gap 60px
	margin-bottom 65px
	
	@media (max-width 639px)
		-webkit-column-count 1 /* Chrome, Safari, Opera */
		-moz-column-count 1 /* Firefox */
		column-count 1
		
	@media (min-width 768px)
		-webkit-column-count 3 /* Chrome, Safari, Opera */
		-moz-column-count 3 /* Firefox */
		column-count 3
		-webkit-column-gap 40px /* Chrome, Safari, Opera */
		-moz-column-gap 40px /* Firefox */
		column-gap 40px
	
	a
		display block
		font-family 'Gotham Book'
		font-weight bold
		font-size 1em
		line-height 2
		width 100%
		color #000
		padding-left 5px
	
		&:hover
			color #FFF
			background-color #26cad3
			
		@media (max-width 639px)
			line-height 1
			padding 5px
			margin-bottom 5px
			
		
		@media (min-width 1025px)
			padding-left 24px
			font-size 1.125em
	
.author
	color #FFF
	margin 50px auto 0
	padding-right 1.2em
	
	@media (min-width 641px) and (max-width 1024px)
		width: 97%
	
	@media (min-width 1025px)
		padding-right 0px

	h2
		margin 20px 0
		
		@media (min-width 1025px)
			font-size 2.5em

	p 
		font-size 1.125em
		line-height 2
		margin 0 0 20px 0
		
		@media (min-width 1025px) 
			font-size 1em
			line-height 1.4
		
	img
		float left
		margin-left calc(-1.215em - 5px)
		margin-left -webkit-calc(-1.215em - 5px)
		margin-right 1.25em

#results 
	
	.authorBoxes
		text-align center
		// padding 0.7rem
		font-family "Gotham Light"
		
		// @media (min-width: 1025px)
		// 	padding 0.8rem 0.6rem
		
		a 
			display inline-block
			vertical-align middle
		
		img 
			margin 1.5rem auto
			width auto
			height 223px	
			display: inline-block; /* styles for centering vertically*/
			vertical-align: middle; /* styles for centering vertically*/
			
			
			@media (min-width:641px) and (max-width: 768px)
				height 314px
			@media (min-width:769px) and (max-width: 960px)
				height 250px
			@media (min-width:1024px) and (max-width: 1279px)
				height 271px
			@media (min-width: 1280px) and (max-width: 1919px)
				height 269px
			@media (min-width: 1920px)
				height 324px
			
	.authorPhoto
		background-color #f4f4f4
		width 100%
		height 100%
		
		img
			margin 0
			height 100%
			width auto
	
	.book
		background-color #F4F4F4
		width 100%
		height 100%
		display block

	.socialIcons
				background-color #F4F4F4
				display table
				
				&.vaWrapper
					display inline-block
					width 100%
					height 100%
					vertical-align middle
					font-size 1em
					
					ul
						margin 0
						width 99%
					
					li 
						height auto
						padding .5em .5em .5em .7em
						
						@media (min-width:320px) and (max-width: 639px)
							width 33% !important
						
						a 
							text-align right

						img
							margin 0
							width 100%
							height auto
